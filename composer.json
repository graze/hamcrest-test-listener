{
    "name": "graze/hamcrest-test-listener",

    "description": "A PHPUnit test listener for the hamcrest assertion library.",

    "license": "MIT",

    "authors": [
        {
            "name": "Graze Developers",
            "email": "developers@graze.com"
        }
    ],

    "autoload": {
        "psr-4": {
            "Hamcrest\\Adapter\\PHPUnit\\": "src/"
        }
    },

    "autoload-dev": {
        "classmap": [
            "tests/unit/"
        ]
    },

    "require": {
        "php": "^7",
        "phpunit/phpunit": "^7",
        "hamcrest/hamcrest-php": "^2.0",
        "graze/standards": "^2.0",
        "squizlabs/php_codesniffer": "^3"
    },

    "conflict": {
        "phpunit/phpunit": "5.1.0"
    },

    "require-dev": {
        "mockery/mockery": "^1"
    }
}
